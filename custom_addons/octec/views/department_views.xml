<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_octec_department_form" model="ir.ui.view">
        <field name="name">octec.department.form</field>
        <field name="model">octec.department</field>
        <field name="arch" type="xml">
            <form string="Departments">
                <sheet>
                    <group>
                        <field name="dept_name"/>
                        <field name="dept_description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
        <record id="octec_department_view_list" model="ir.ui.view">
        <field name="name">octec.department.view.list</field>
        <field name="model">octec.department</field>
        <field name="arch" type="xml">
            <list string="Departments">
                <field name="dept_name"/>
                <field name="dept_description"/>
            </list>
        </field>
    </record>
    <record id="action_octec_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">octec.department</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Department
            </p>
        </field>
    </record>
</odoo>