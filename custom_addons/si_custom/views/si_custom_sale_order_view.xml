<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="si_custom_sale_order_view_form" model="ir.ui.view">
        <field name="name">si.custom.sale.order.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]/button" position="before">
                <button class="oe_stat_button" name="action_view_po"
                        type="object" icon="fa-credit-card" help="Purchase Orders">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="po_count" widget="statinfo" nolabel="1" class="mr4"/>
                        </span>
                        <span class="o_stat_text">Purchase Order</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//header/button[@name='action_cancel']" position="after">
                <button name="%(si_custom_customer_update_action)d"
                type="action"
                string="update customer"
                invisible="state not in ['sale']"
                context="{'default_customer_id':partner_id}"
                class="oe_highlight"/>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="purchase_order_reference" invisible="state not in ['sale']"/>
            </xpath>
        </field>
    </record>
</odoo>