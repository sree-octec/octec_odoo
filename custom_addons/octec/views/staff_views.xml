<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="octec_staff_view_form" model="ir.ui.view">
        <field name="name">octec.staff.view.form</field>
        <field name="model">octec.staff</field>
        <field name="arch" type="xml">
            <form string="Staffs">
                <sheet>
                    <group>
                        <group>
                                <field name="name"/>
                        </group>
                        <group>
                                <field name="photo" widget="image" class="oe_avatar" nolabel="1"/>
                        </group>
                    </group>
                    <notebook>
                      <page string="Personel Details">
                        <group>
                          <group>
                                <field name="address_1"/>
                                <field name="address_2"/>
                                <field name="city"/>
                                <field name="state"/>
                                <field name="pin_code"/>
                          </group>
                          <group>
                            <field name="phone_number"/>
                              <field name="email"/>
                              <field name="qualification"/>
                              <field name="dept_id" widget="selection"/>
                          </group>
                        </group>
                      </page>
                      <page string="Subject Details">
                            <field name="subject_ids" widjet="many2many"/>
                      </page>
                      <page string="Payment Details">
                            <field name="payment_ids" widjet="One2many"/>
                      </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
        <record id="octec_staff_view_tree" model="ir.ui.view">
        <field name="name">octec.staff.view.tree</field>
        <field name="model">octec.staff</field>
        <field name="arch" type="xml">
            <list string="Staffs">
                <field name="name"/>
                <field name="dept_id"/>
                <field name="phone_number"/>
                <field name="email"/>
                <field name="subject_ids"/>
            </list>
        </field>
    </record>

    <record id="octec_staff_action" model="ir.actions.act_window">
        <field name="name">Staffs</field>
        <field name="res_model">octec.staff</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Staff
            </p>
        </field>
    </record>
</odoo>