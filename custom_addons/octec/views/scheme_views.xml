<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_octec_scheme_form" model="ir.ui.view">
        <field name="name">octec.scheme.form</field>
        <field name="model">octec.scheme</field>
        <field name="arch" type="xml">
            <form string="Schemes">
                <sheet>
                    <group>
                        <group>
                            <field name="scheme_name"/>
                            <field name="module_fee"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
        <record id="octec_scheme_view_tree" model="ir.ui.view">
        <field name="name">octec.scheme.view.tree</field>
        <field name="model">octec.scheme</field>
        <field name="arch" type="xml">
            <list string="Schemes">
                <field name="scheme_name"/>
                <field name="module_fee"/>
            </list>
        </field>
    </record>
    <record id="octec_scheme_action" model="ir.actions.act_window">
        <field name="name">Schemes</field>
        <field name="res_model">octec.scheme</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Scheme
            </p>
        </field>
    </record>
</odoo>