<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quick_order_mail_wizard_view_form" model="ir.ui.view">
        <field name="name">quick.order.mail.wizard.view.form</field>
        <field name="model">quick.order.mail.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="email_id"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" class="btn-primary" type="object" name="action_quick_order_send_mail"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>      
    <record id="action_quick_order_mail_wizard" model="ir.actions.act_window">
      <field name="name">Quick Order Mail</field>
      <field name="res_model">quick.order.mail.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>  
</odoo>