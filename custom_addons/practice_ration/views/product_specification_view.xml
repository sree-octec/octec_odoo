<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_specification_view_form" model="ir.ui.view">
        <field name="name">product.specification.view.form</field>
        <field name="model">product.specification</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="value"/>
                        <field name="reference_field_id" widget="many2one"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="product_specification_view_list" model="ir.ui.view">
        <field name="name">product.specification.view.list</field>
        <field name="model">product.specification</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="value"/>
                <field name="reference_field_id" widget="many2one"/>
            </list>
        </field>
    </record>
        <record id="product_specification_action" model="ir.actions.act_window">
        <field name="name">Product specification</field>
        <field name="res_model">product.specification</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
    id="menu_product_specification"
    name="Product Specifications"
    action="product_specification_action"
    parent="sale.prod_config_main"
    sequence="35"/>

</odoo>