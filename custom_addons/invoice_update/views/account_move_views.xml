<odoo>
    <record id="view_move_form_inherit_invoice_approval" model="ir.ui.view">
        <field name="name">account.move.form.inherit.invoice.approval</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- add buttons before the Post button -->
            <xpath expr="//header/button[@name='action_post']" position="before">
                <button name="action_send_for_approval"
                        string="Send for Approval"
                        type="object"
                        class="btn-primary"
                        />
                <button name="action_first_approve"
                        string="First Approval"
                        type="object"
                        groups="invoice_update.group_invoice_first_approval"
                        class="btn-success"
                        />
                <button name="action_second_approve"
                        string="Final Approval"
                        type="object"
                        groups="invoice_update.group_invoice_second_approval"
                        class="btn-success"
                        />
            </xpath>

        </field>
    </record>
</odoo>
