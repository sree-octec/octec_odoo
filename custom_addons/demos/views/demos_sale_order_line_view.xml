<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Sale Order Line Form View -->
    <record id="demos_sale_order_line_form_view" model="ir.ui.view">
        <field name="name">demos.sale.order.line.form.view</field>
        <field name="model">demos.sale_order_line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="quantity"/>
                        </group>
                            <field name="unit_price"/>
                            <field name="sub_total" widget="monetary"/>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Sale Order Linne Tree View -->
    <record id="demos_sale_order_line_tree_view" model="ir.ui.view">
        <field name="name">demos.sale.order.line.tree.view</field>
        <field name="model">demos.sale_order_line</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="quantity"/>
                <field name="unit_price"/>
                <field name="total" widget="monetary"/>
            </list>
        </field>
    </record>
    <!-- Sale Order Line Actions -->
    <record id="demos_sale_order_line_action" model="ir.actions.act_window">
        <field name="name">Order Lines</field>
        <field name="res_model">demos.sale_order_line</field>
        <field name="view_mode">list,tree</field>
    </record>
</odoo>