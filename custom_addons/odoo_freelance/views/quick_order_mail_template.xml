<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quick_order_mail_template" model="mail.template">
        <field name="name">Quick Order</field>
        <field name="model_id" ref="odoo_freelance.model_quick_order_mail_wizard"/>
        
        <field name="subject">Quick Order Invoice from {{ object.env.company.name }}</field>
        <field name="email_from">{{ object.env.company.email_formatted }}</field>
        <field name="email_to">{{ object.email_id }}</field>
        
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p>Hello, your detailed bill is attached below.</p>
            </div>
        </field>
        
        <field name="report_template_ids" eval="[(4, ref('odoo_freelance.quick_order_report'))]"/>
        <field name="auto_delete" eval="True"/>
    </record>
</odoo>