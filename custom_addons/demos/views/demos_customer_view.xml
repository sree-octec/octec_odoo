<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="demos_customer_form_view" model="ir.ui.view">
        <field name="name">demos.customer.form.view</field>
        <field name="model">demos.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="phone_number"/>
                            <field name="email"/>
                            <field name="dob"/>
                            <field name="country"/>
                        </group>
                        <group>
                            <field name="address"/>
                            <field name="pin_code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree View -->
    <record id="demos_customer_tree_view" model="ir.ui.view">
        <field name="name">demos.customer.tree.view</field>
        <field name="model">demos.customer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="phone_number"/>
                <field name="email"/>
                <field name="country"/>
            </list>
        </field>
    </record>
    <!-- Action -->
    <record id="demos_customer_action" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">demos.customer</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>