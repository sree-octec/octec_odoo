<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_octec_daily_class_form" model="ir.ui.view">
        <field name="name">octec.daily_class.form</field>
        <field name="model">octec.daily_class</field>
        <field name="arch" type="xml">
            <form string="Daily Class">
                <sheet>
                    <group>
                        <group>
                            <field name="class_date"/>
                            <field name="subject_id"/>
                            <field name="staff_id"/>
                            <field name="module"/>
                        </group>
                        <group>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="session_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
        <record id="octec_daily_class_view_tree" model="ir.ui.view">
        <field name="name">octec.daily_class.view.tree</field>
        <field name="model">octec.daily_class</field>
        <field name="arch" type="xml">
            <list string="Daily Class">
                <field name="class_date"/>
                <field name="subject_id"/>
                <field name="staff_id"/>
                <field name="module"/>
                <field name="start_time" widget="float_time" class="text-center"/>
                <field name="end_time" widget="float_time" class="text-center"/>
                <field name="session_ids" string="Students"/>
            </list>
        </field>
    </record>
    <record id="octec_daily_class_action" model="ir.actions.act_window">
        <field name="name">Class Schedule</field>
        <field name="res_model">octec.daily_class</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Class
            </p>
        </field>
    </record>
</odoo>