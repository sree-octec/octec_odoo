<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="octec_student_fee_form" model="ir.ui.view">
        <field name="name">octec.payment.form</field>
        <field name="model">octec.payment</field>
        <field name="arch" type="xml">
            <form string="Expenses">
                <sheet>
                    <group>
                      <group>
                        <field name="date"/>
                        <field name="payment_type"/>
                        <field name="staff_id"/>
                        <field name="subject_id"/>
                        <field name="session_ids" widget="many2many_tags"/>
                      </group>
                      <group>
                        <field name="amount"/>
                        <field name="payment_mode"/>
                        <field name="remark"/>
                      </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
        <record id="octec_payment_view_list" model="ir.ui.view">
        <field name="name">octec.payment.view.list</field>
        <field name="model">octec.payment</field>
        <field name="arch" type="xml">
            <list string="Expenses">
              <field name="date"/>
              <field name="payment_type"/>
              <field name="staff_id"/>
              <field name="subject_id"/>
              <field name="amount"/>
              <field name="payment_mode"/>
              <field name="remark"/>
            </list>
        </field>
    </record>
    <record id="octec_payment_action" model="ir.actions.act_window">
        <field name="name">Expenses</field>
        <field name="res_model">octec.payment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an Expense
            </p>
        </field>
    </record>
</odoo>