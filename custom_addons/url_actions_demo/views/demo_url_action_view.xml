<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="demo_url_action_view_form" model="ir.ui.view">
    <field name="name">demo.url.action.view.form</field> 
    <field name="model">demo.url.action</field>
    <field name="arch" type="xml">
      <form>
          <header>
            <!-- External Link -->
            <button name="%(action_open_external_link)d"
            string="Open External Link"
            type="action"
            class="oe_link"/>

            <!-- Download pdf sample -->
             <button name="%(action_download_pdf)d"
             type="action"
             string="Download Pdf"
             class="oe_highlighht"/>
          </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="external_link"/>
            <field name="dynamic_param"/>
          </group>
       </sheet>

      </form>
    </field>
  </record>
  <record id="demo_url_action_tree_view" model="ir.ui.view">
    <field name="name">demo.url.action.tree.view</field>
    <field name="model">demo.url.action</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
      </list>
    </field>
  </record>
  <record id="action_demo_url" model="ir.actions.act_window">
    <field name="name">Url Actions</field>
    <field name="res_model">demo.url.action</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>