<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="octec_student_fee_form" model="ir.ui.view">
        <field name="name">octec.student.fee.form</field>
        <field name="model">octec.student.fee</field>
        <field name="arch" type="xml">
            <form string="Payments">
                <sheet>
                    <group>
                      <group>
                        <field name="date"/>
                        <field name="session_id"/>
                        <field name="subject_id"/>
                        <field name="module"/>
                      </group>
                      <group>
                        <field name="payment_type"/>
                        <field name="amount"/>
                        <field name="payment_mode"/>
                        <field name="remark"/>
                      </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
        <record id="octec_student_fee_view_list" model="ir.ui.view">
        <field name="name">octec.student.fee.view.list</field>
        <field name="model">octec.student.fee</field>
        <field name="arch" type="xml">
            <list string="Payments">
              <field name="date"/>
              <field name="session_id"/>
              <field name="subject_id"/>
              <field name="module"/>
              <field name="payment_type"/>
              <field name="amount"/>
              <field name="payment_mode"/>
            </list>
        </field>
    </record>
    <record id="octec_student_fee_action" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">octec.student.fee</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Payment
            </p>
        </field>
    </record>
</odoo>