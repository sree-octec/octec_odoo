<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_filter_approval_view" model="ir.ui.view">
            <field name="name">purchase.order.filter.approval.view</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter string="First Level Approval" 
                            name="first_level_approval" 
                            domain="[('state', '=', 'to approve')]"/>
                    <filter string="second Level Approval" 
                            name="second_level_approval" 
                            domain="[('state', '=', 'second_approval')]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>